{% extends 'base.html.twig' %}

{% block title %}Add Car{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <!-- Home -->
    <a class="navbar-brand" href="{{ asset('/') }}">Home</a>
    <ul class="navbar-nav">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">Manager</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="{{ asset('manager/car') }}">Car</a>
                <a class="dropdown-item" href="{{ asset('manager/type') }}">Type</a>
                <a class="dropdown-item" href="{{ asset('manager/manufacturer') }}">Manufacturer</a>
            </div>
        </li>
    </ul>
</nav>
<div class="container">
    <h2 class="mt-5 mb-5 text-center text-success">ADD CAR</h2>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary">Name</h6>
            {{ form_widget (form.Name, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Description</h6>
            {{ form_widget (form.Description, {'attr' : {'class' : 'form-control'}}) }}
        </div>
         <div class="form-group mt-2">
            <h6 class="text-primary">Manufacturer</h6>
            {{ form_widget (form.Manufacturer, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Car Type</h6>
            {{ form_widget (form.CarType, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Year Of Manufacture </h6>
            {{ form_widget (form.YearOfManufacture, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Price</h6>
            {{ form_widget (form.Price, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Amount</h6>
            {{ form_widget (form.Amount, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary">Image</h6>
            {{ form_widget (form.ImageFile, {'attr' : {'class' : 'form-control'}, 'required': 'required'}) }} 
            {# thêm thuộc tính required để bắt buộc ng dùng upload ảnh khi tạo #}
        </div>
        <div class="form-group text-center mt-5">
            <button type="submit" class="btn btn-primary mt-2">Add</button>
        </div>
    {{ form_end (form) }}
    <div class="col-md-12 text-center">
        <a href="{{ asset('manager/car') }}" class="btn btn-secondary" role="button">Back</a>
    </div>
</div>

{% endblock %}
